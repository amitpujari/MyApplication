<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40ffd8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="weatherbroadcast.weatherapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="City, State"
        android:id="@+id/cityText"
        android:textColor="#e74d3e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/thumbnailIcon"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="10dp"
        android:background="#fff"/>


    <TextView
        android:id="@+id/tempText1"
        android:text="00Â°c"
        android:textColor="#e74d3e"
        android:textSize="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityText"
        android:layout_alignStart="@+id/cityText"
        android:gravity="center"/>

    <TextView
        android:id="@+id/windText"
        android:text="Wind"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cloudText"
        android:text="Cloud"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/windText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pressureText"
        android:text="Pressure"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/cloudText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/humidityText"
        android:text="Humidity"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/pressureText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sunriseText"
        android:text="Sunrise Time"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/humidityText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sunsetText"
        android:text="Sunset Time"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/sunriseText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/updateText"
        android:text="Last Updated"
        android:textColor="#e74d3e"
        android:textSize="16sp"
        android:layout_below="@+id/sunsetText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
